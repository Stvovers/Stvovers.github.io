<mvc:View controllerName="sap.ui.demo.wt.controller.App" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true">
	<App>
		<pages>
			<Page title="{i18n>homePageTitle}">
				<content>
					<IconTabBar id="idIconTabBarMulti" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding">
						<items>
							<IconTabFilter icon="sap-icon://search" text="Search">
								<Panel headerText="{i18n>helloPanelTitle}" >
									<content>
										<Label text="OTRS" class = "sapUiSmallMargin" />
										<SearchField placeholder="10000000" width="25%" class="sapUiSmallMargin" search="onSearchOTRS"/>
										<Label text="EIM" class = "sapUiSmallMargin"/>
										<SearchField placeholder="6812" width="25%" class="sapUiSmallMargin" search="onSearchEIM"/>
									</content>
								</Panel>
							</IconTabFilter>
							<IconTabFilter icon="sap-icon://shortcut" text="Shortcuts">
							</IconTabFilter>
						</items>
					</IconTabBar>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>